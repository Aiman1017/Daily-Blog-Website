<%- include("partials/header.ejs") -%>

  <h1>Home</h1>
  <p> <%= homeContent %> </p>

  <%  posts.forEach(function(post){ %>
    <h2> <%= post.title %> </h2>
    <p> 
      <%= post.bodyContent.substring(0, 100) + '...' %> 
      <a href="/post/<%=post.id%>">Read More</a> 
    </p>
  <% }); %>

